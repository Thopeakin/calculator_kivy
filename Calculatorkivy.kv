<Frame>:
    orientation: 'vertical'
    canvas:
        Color:
            rgba: 0, 0, 1, 0.2
        Rectangle:
            size: self.size
            pos: self.pos
    Label:
        canvas:
            Color:
                rgba: 0, 0, 0, 1
            Line:
                points:  (0, root.height, root.width, root.height)
                width: 3
        size_hint_y: None
        height: 4
    Label:
        id: display
        canvas.before:
            Color:
                rgba: 1, 1, 1, 1
            Rectangle:
                size: self.size
                pos: self.pos
        size_hint_y: None
        height: 120
        font_size: 40
        color: 0, 0, 0, 1
    BoxLayout:
        GridLayout:
            size_hint_x: None
            width: root.width * 0.7
            cols: 3
            Button:
                id: nine
                text: '9'
                color: 0, 0, 0, 1
                font_size: 30
                on_release: display.text += '9'
                
            Button:
                id: eigth
                text: '8'
                color: 0, 0, 0, 1
                font_size: 30
                on_release: display.text += '8'
            Button:
                id: seven
                text: '7'
                color: 0, 0, 0, 1
                font_size: 30
                on_release: display.text += '7'
            Button:
                id: six
                text: '6'
                color: 0, 0, 0, 1
                font_size: 30
                on_release: display.text += '6'
            Button:
                id: five
                text: '5'
                color: 0, 0, 0, 1
                font_size: 30
                on_release: display.text += '5'
            Button:
                id: four
                text: '4'
                color: 0, 0, 0, 1
                font_size: 30
                on_release: display.text += '4'
            Button:
                id: three
                text: '3'
                color: 0, 0, 0, 1
                font_size: 30
                on_release: display.text += '3'
            Button:
                id: two
                text: '2'
                color: 0, 0, 0, 1
                font_size: 30
                on_release: display.text += '2'
            Button:
                id: one
                text: '1'
                color: 0, 0, 0, 1
                font_size: 30
                on_release: display.text += '1'
            Button:
                id: zero
                text: '0'
                color: 0, 0, 0, 1
                font_size: 30
                on_release: display.text += '0'
            Button:
                id: add
                text: '+'
                color: 0, 0, 0, 1
                font_size: 30
                on_release: root.add()
            Button:
                id: subtract
                text: '-'
                color: 0, 0, 0, 1
                font_size: 30
                on_release: root.subtract()
            Button:
                id: multiply
                text: 'x'
                color: 0, 0, 0, 1
                font_size: 30
                on_release: root.multiply()
            Button:
                id: divide
                text: '/'
                color: 0, 0, 0, 1
                font_size: 30
                on_release: root.divide()
            Button:
                id: pow
                text: '^'
                color: 0, 0, 0, 1
                font_size: 30
                on_release: root.power()
        FloatLayout:
            size_hint_x: None
            width: 3
        GridLayout:
            cols: 1
            Button:
                id: decimal
                text: 'AC'
                color: 1, 0, 0.2, 1
                font_size: 30
                on_release: root.AC()
            Button:
                id: decimal
                text: '.'
                color: 0, 0, 0, 1
                font_size: 30
                on_release: display.text += '.'
            Button:
                id: calc
                text: '='
                color: 0, 0, 0, 1
                font_size: 30
                on_release: root.calc()
